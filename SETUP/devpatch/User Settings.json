{
  "editor.fontSize": 16,
  "git.enableSmartCommit": true,
  "window.zoomLevel": 2,
  "files.autoSave": "off",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    {
      "language": "vue",
      "autoFix": false
    }
  ],
  "eslint.options": {
    "plugins": [
      "html", "json"
    ]
  },
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "prettier.eslintIntegration": true,
  "eslint.autoFixOnSave": false,
  "beautify.config": {
    "editorconfig": true,
    "indent_size": 2,
    "wrap_attributes": "force-aligned",
    "wrap_attributes_indent_size": 2,
    "wrap_line_length": 80
  },
  "beautify.language": {
    "html": [
      "htm",
      "html",
      "json"
    ]
  },
  "vetur.validation.template": false,
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "editorconfig": true,
      "indent_size": 2,
      "wrap_attributes": "force-aligned",
      "wrap_attributes_indent_size": 2,
      "wrap_line_length": 80
    }
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false
}